<h1>Listing profiles</h1>

<table>
  <tr>
    <th>Nickname</th>
    <th>Gender</th>
    <th>Seeking Gender</th>
    <th>Date of birth</th>
    <th>Ethnicity</th>
    <th>Zip code</th>
    <th>Headline</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @profiles.each do |profile| %>
  <tr>
    <td><%= profile.nickname %></td>
    <td><%= profile.gender %></td>
    <td><%= profile.seeking_gender %></td>
    <td><%= profile.date_of_birth %></td>
	<td><%= profile.ethnicity %></td>
    <td><%= profile.zip_code %></td>
    <td><%= profile.headline %></td>
    <td><%= profile.description %></td>
    <td><%= link_to 'Show', profile %></td>
    <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
    <td><%= link_to 'Destroy', profile, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

