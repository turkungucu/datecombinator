<h2>Sign Up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email %></div>
  <%= f.email_field :email %></p>

  <div><%= f.label :password %></div>
  <%= f.password_field :password %></p>

  <div><%= f.label :password_confirmation %></div>
  <%= f.password_field :password_confirmation %></p>
  
  <%= render :partial => "devise/shared/additional_fields", :locals => { :f => f, :ethnicity => resource.ethnicity } %>

  <p><%= f.submit "Signup", :class => "submit" %></p>
<% end %>

<%= render :partial => "devise/shared/links" %>
